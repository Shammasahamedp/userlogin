<%-include('header')-%>
   <div class="text-center center-div form1" id="login">
      <div class="container w-25 border py-5">
         <div class="title pb-5">
            <h2 class="font-weight-bold">
               Login
            </h2>
            <span class="span">Login for the existing user</span>
            <% if(locals.logout){%>
               <div class="alter alert-success text-center span">
                  <%= logout %>
               </div>
               <%}%>
         </div>
         <form action="/login" method='POST' class="pt-3 ">
            <div class="form-group">
               <input type="email" class="form-control" placeholder="email" name="email">
               <!-- <small class="form-text  text-left" id="sm">Register email address</small> -->
            </div>
            <div class="form-group">
               <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <%if(locals.err){%>
               <p class="text-danger">
                  <%=err%>
               </p>
               <%}%>
                  <button type="submit" class="btn btn-success">Submit</button>
         </form>
         <p class="span">dont have an account? </p><a href="/signup">Sign up</a>




      </div>
   </div>
   <%-include('footer')-%>